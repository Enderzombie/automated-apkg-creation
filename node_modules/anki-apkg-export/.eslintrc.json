{
  "parser": "babel-eslint",
  "globals": {
    "Promise": true
  },
  "env": {
    "browser": true,
    "node": true
  },
  "extends": ["plugin:prettier/recommended"],
  "rules": {
    "arrow-parens": [
      2,
      "as-needed"
    ],
    "keyword-spacing": 2,
    "no-extra-semi": 2,
    "no-undef": 2,
    "no-unused-vars": 2,
    "no-var": 2,
    "prettier/prettier": [
      2,
      {
        "printWidth": 120,
        "singleQuote": true,
        "trailingComma": "none"
      }
    ],
    "semi": [
      2,
      "always"
    ]
  }
}
